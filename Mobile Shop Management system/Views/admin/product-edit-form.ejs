<div class="container mt-5">
  <h4 class="text-center mb-4 text-primary">Edit Product</h4>
  <p class="text-muted text-center">
    Update the product details.
  </p>

  <!-- Form Styling with Gradient and Shadow -->
  <form action="" method="post" enctype="multipart/form-data" class="p-5 shadow-lg rounded" style="background: linear-gradient(135deg, #f0f8ff, #e6e6fa);">
      <div class="bg-light p-4 rounded" style="border: 1px solid #ddd;">
          <!-- Title Input -->
          <div class="form-group mb-4">
              <label for="titleInput" class="text-dark font-weight-bold">Title</label>
              <input
                  name="title"
                  type="text"
                  class="form-control border-primary"
                  id="titleInput"
                  placeholder="Enter Title"
                  value="<%= product.title %>"
                  style="background-color: #f8f9fa; color: #0c5460;"
              />
              <small class="form-text text-muted">Product Title</small>
          </div>

          <!-- Description Input -->
          <div class="form-group mb-4">
              <label for="descriptionInput" class="text-dark font-weight-bold">Description</label>
              <textarea
                  name="description"
                  class="form-control border-info"
                  id="descriptionInput"
                  placeholder="Enter Description"
                  rows="4"
                  style="background-color: #f8f9fa; color: #0c5460;"
              ><%= product.description %></textarea>
              <small class="form-text text-muted">Product Details</small>
          </div>

          <!-- Price Input -->
          <div class="form-group mb-4">
              <label for="priceInput" class="text-dark font-weight-bold">Price</label>
              <input
                  name="price"
                  type="text"
                  class="form-control border-success"
                  id="priceInput"
                  placeholder="Enter Price"
                  value="<%= product.price %>"
                  style="background-color: #f8f9fa; color: #155724;"
              />
              <small class="form-text text-muted">Product Price in PKR</small>
          </div>

          <div class="form-group mb-4">
            <label for="stockInput" class="text-dark font-weight-bold">stock</label>
            <input
                name="stock"
                type="text"
                class="form-control border-success"
                id="stockInput"
                placeholder="Enter Stock"
                value="<%= product.stock %>"
                style="background-color: #f8f9fa; color: #155724;"
            />
            <small class="form-text text-muted">Product Price in PKR</small>
        </div>

          <!-- File Upload Input -->
          <div class="form-group mb-4">
              <label for="fileInput" class="text-dark font-weight-bold">Picture</label>
              <input
                  name="file"
                  type="file"
                  class="form-control border-warning"
                  id="fileInput"
                  style="background-color: #fefefe; color: #856404;"
              />
              <small class="form-text text-muted">Upload New Product Picture</small>
          </div>
      </div>

      <!-- Submit Button -->
      <div class="form-group text-center mt-4">
          <button type="submit" class="btn btn-info btn-lg px-5">Update Product</button>
      </div>
  </form>
</div>
