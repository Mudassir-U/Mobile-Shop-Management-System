<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <style>
    /* General Styles */
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      height: 100vh;
      background: url('https://img.freepik.com/premium-photo/black-smartphone-black-background_14117-867531.jpg') no-repeat center center fixed;
      background-size: cover;
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: relative;
      padding: 0 40px;
    }

    /* Dark Overlay for Better Visibility */
    body::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.3);
      z-index: 0;
    }

    /* Sign-Up Form Styles */
    .signup-container {
      position: relative;
      z-index: 1;
      background: #343a40;
      padding: 20px; /* Reduced padding */
      border-radius: 15px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
      text-align: center;
      max-width: 400px; /* Reduced width */
      width: 100%;
      position: absolute;
      left: 150px;
      top: 50%;
      transform: translateY(-50%);
    }

    .signup-container h3 {
      margin-bottom: 20px;
      color: rgb(201, 165, 76);
    }

    .form-group {
      margin-bottom: 20px;
      text-align: left;
      position: relative;
    }

    .form-group label {
      font-weight: bold;
      font-size: 15px;
      margin-bottom: 8px;
      display: block;
      color: rgb(201, 165, 76);
    }

    .form-group input {
      width: 100%;
      padding: 10px; /* Reduced padding */
      border: 1px solid #bbb;
      border-radius: 7px;
      font-size: 12px; /* Reduced font size */
    }

    .eye-icon {
      position: absolute;
      right: 10px;
      top: 70%;
      transform: translateY(-50%);
      cursor: pointer;
      color: #bbb;
      font-size: 16px;
    }

    .btn {
      width: 100%;
      padding: 12px 18px; /* Reduced padding */
      background-color: rgb(201, 165, 76);
      color: black;
      border: none;
      border-radius: 7px;
      font-size: 16px; /* Reduced font size */
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .btn:hover {
      background-color: rgb(201, 165, 76);
    }

    .create-account-link {
      margin-top: 15px;
      font-size: 14px; /* Reduced font size */
    }

    .create-account-link a {
      color: rgb(201, 165, 76);
      text-decoration: none;
    }

    .create-account-link a:hover {
      text-decoration: underline;
    }

    /* Store Name Styles */
    .store-name {
      font-size: 50px;
      font-weight: bold;
      color: rgb(201, 165, 76);
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
      position: absolute;
      right: 300px;
      top: 50%;
      transform: translateY(-50%);
      text-align: right;
    }

    @media (max-width: 768px) {
      body {
        flex-direction: column;
        justify-content: center;
        padding: 20px;
      }

      .signup-container {
        position: static;
        margin-bottom: 20px;
        transform: none;
      }

      .store-name {
        position: static;
        text-align: center;
        margin-top: 20px;
        transform: none;
      }
    }
  </style>
</head>

<body>
  <!-- Sign Up Form -->
  <div class="signup-container">
    <h3>Create an Account</h3>

    <form id="signup-form" action="" method="post" onsubmit="return validatePasswords()">
      <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" placeholder="Enter your full name" required />
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" required />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required />
        <i class="fas fa-eye eye-icon" onclick="togglePasswordVisibility('password')"></i>
      </div>

      <div class="form-group">
        <label for="confirm-password">Confirm Password</label>
        <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm your password" required />
        <i class="fas fa-eye eye-icon" onclick="togglePasswordVisibility('confirm-password')"></i>
      </div>

      <button type="submit" class="btn">Sign Up</button>
    </form>

    <div class="create-account-link">
      <p style="color: rgb(240, 235, 235);">Already have an account? <a href="/login">Login here</a></p>
    </div>
  </div>

  <!-- Store Name -->
  <div class="store-name">
    Database Mobiles
  </div>

  <script>
    function validatePasswords() {
      const password = document.getElementById("password").value;
      const confirmPassword = document.getElementById("confirm-password").value;

      if (password !== confirmPassword) {
        alert("Passwords do not match!");
        return false;  // Prevent form submission
      }

      return true;  // Allow form submission
    }

    function togglePasswordVisibility(fieldId) {
      const field = document.getElementById(fieldId);
      const fieldType = field.type === "password" ? "text" : "password";
      field.type = fieldType;
    }
  </script>
</body>

</html>