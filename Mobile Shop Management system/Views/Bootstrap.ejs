    <header class="bg-dark text-white p-3" style="background-color: #343a40;">
        <div class="container d-flex justify-content-between align-items-center">
            <img src="206805728.png" alt="Database Mobiles Logo" style="width: 300px; height: auto;" class="me-3">
            <div class="d-flex">
                <% if (user) { %>
                    <!-- Show Logout and Welcome for logged-in users -->
                    <span class="nav-link text-white ms-3">Welcome <%= user.name %></span>
                    <a class="nav-link text-white ms-3" href="/logout">Logout</a>

                <% } else { %>
                    <!-- Show Login and Register for not logged-in users -->
                    <a class="nav-link text-white ms-3" href="/login">Login</a>
                    <a class="nav-link text-white ms-3" href="/register">Register</a>
                <% } %>
            </div>
        </div>
    </header>
