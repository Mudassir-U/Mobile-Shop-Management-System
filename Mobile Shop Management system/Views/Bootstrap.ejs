        <div class="container-fluid">
            <a class="navbar-brand text-white" href="#"><i class="fas fa-home"></i></a>
            <div class="collapse navbar-collapse w-100" id="navbarNav">
                <!-- Left-aligned links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <% if (user?.role.includes("admin")) { %>
                        <li class="nav-item ms-4"><a href="/admin/product/:page?" class="nav-link text-white">Admin</a></li>
                        <li class="nav-item ms-4"><a href="/admin/customer-reviews" class="nav-link text-white">Customer Reviews</a></li>
                    <% } else { %>
                        <li class="nav-item ms-4"><a href="/homepage" class="nav-link text-white">Products</a></li>
                    <% } %>
                    <li class="nav-item ms-4">
                        <a class="nav-link text-white" href="#top-selling-products">Top Selling</a>
                    </li>
                    <li class="nav-item ms-4">
                        <a class="nav-link text-white" href="#about-us">About Us</a>
                    </li>
                    <li class="nav-item ms-4">
                        <a class="nav-link text-white" href="#contact-us">Contact Us</a>
                    </li>
                </ul>
    
                <!-- Right-aligned buttons -->
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <% if (user && !user?.role.includes("admin")) { %>
                        <li class="nav-item ms-4">
                            <a href="/cart" class="nav-link text-white">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    
    
    
    
    
    

    

