<div class="container mt-5">
    <!-- Title -->
    <h4 class="text-center mb-4 text-primary">Create Category</h4>
    <p class="text-muted text-center">
    </p>
  
    <!-- Form -->
    <form action="" method="post" enctype="multipart/form-data" class="p-4 shadow-lg rounded" style="background: linear-gradient(135deg, #f8f9fa, #e6e6fa);">
      <div class="p-4" style="background-color: #eef1f6; border-radius: 10px; border: 1px solid #d1d1e0;">
        <!-- Name Field -->
        <div class="form-group mb-4">
          <label for="titleInput" class="text-dark font-weight-bold">Name</label>
          <input
            name="name"
            type="text"
            class="form-control border-primary"
            id="titleInput"
            placeholder="Enter Category Name"
            value=""
            style="background-color: #f8f9fa; color: #0c5460;"
          />
          <small class="form-text text-muted">Category Name</small>
        </div>
  
        <!-- Description Field -->
        <div class="form-group mb-4">
          <label for="descriptionInput" class="text-dark font-weight-bold">Description</label>
          <textarea
            name="description"
            class="form-control border-info"
            id="descriptionInput"
            placeholder="Enter Category Description"
            rows="4"
            style="background-color: #f8f9fa; color: #0c5460;"
          ></textarea>
          <small class="form-text text-muted">Category Details</small>
        </div>
  
        <!-- Price Field -->
        <div class="form-group mb-4">
          <label for="priceInput" class="text-dark font-weight-bold">Price</label>
          <input
            name="price"
            type="text"
            class="form-control border-success"
            id="priceInput"
            placeholder="Enter Price"
            value=""
            style="background-color: #f8f9fa; color: #155724;"
          />
          <small class="form-text text-muted">Category Price in PKR</small>
        </div>
  
        <!-- Picture Upload Field -->
        <div class="form-group mb-4">
          <label for="fileInput" class="text-dark font-weight-bold">Picture</label>
          <input
            name="file"
            type="file"
            class="form-control border-warning"
            id="fileInput"
            style="background-color: #fefefe; color: #856404;"
          />
          <small class="form-text text-muted">Upload Category Picture</small>
        </div>
      </div>
  
      <!-- Submit Button -->
      <div class="form-group text-center mt-4">
        <button class="btn btn-primary btn-lg px-5 shadow">Create New Category</button>
      </div>
    </form>
  </div>
  